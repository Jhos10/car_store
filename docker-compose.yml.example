services:
  db:
    image: postgres:16
    container_name: db_name
    restart: always
    environment:
      POSTGRES_USER: user_name
      POSTGRES_PASSWORD: password_db
      POSTGRES_DB: name_db
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data

volumes:
  postgres_data:
